{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://juntoz.com/juntoz.api/config/v1",
  "title": "Api Configuration",
  "description": "Api configuration object",
  "type": "object",
  "properties": {
      "name": {
        "description": "Name of the api",
        "type": "string"
      },
      "connectionObject": {
        "description": "Connection string object to connect to the database",
        "type": "object",
        "properties": {
          "user": {
            "description": "Database user",
            "type": "string"
          },
          "password": {
            "description": "Database password",
            "type": "string"
          },
          "database": {
            "description": "Database name",
            "type": "string"
          },
          "server": {
            "description": "Server where the database is located",
            "type": "string"
          },
          "encrypt": {
            "description": "True to encrypt the connection. Mandatory to connect to Azure SQL",
            "type": "boolean",
            "default": "true"
          },
          "pool": {
            "description": "Pool root object for connection pool configuration",
            "type": "object",
            "properties": {
              "min": {
                "description": "Minimum number of connections the pool has to have",
                "type": "string",
                "default": "100"
              },
              "max": {
                "description": "Maximum number of connections the pool can have",
                "type": "string",
                "default": "500"
              }
            }
          }
        }
      },
      "options": {
        "description": "Mutable object containing the api configuration",
        "type": "object"
      }
    },
  "required": [
    "name"
  ]
}
